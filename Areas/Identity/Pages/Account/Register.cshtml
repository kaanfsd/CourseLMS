                                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                            </div>
                                            <div class="form-floating mb-3 col-md-6">
                                                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" style="border-radius: 20px;" class="form-select">
                                                    <option disabled selected>-Select Role-</option>
                                                </select>
                                            </div>
                                            <div class="col-12">
                                                <button id="registerSubmit" type="submit" style="border-radius: 20px;" class="w-100 btn btn-lg btn-primary">Register</button>
                                            </div>
                                        </form>
                                        <p class="nav-link text-center"><a id="login" asp-area="Identity" asp-page="/Account/Login">Sign In</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
    </section>
}
