@page
@using CourseLMS.Areas.Identity.Pages;
@using CourseLMS.Models;
@model RegisterModel
@{
    Layout = "/Views/Shared/_Register-layout.cshtml";
}

    
                @if (User.IsInRole(StaticDetail.Role_Admin))
                {
                    <section class="ftco-section ftco-no-pb ftco-no-pt">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-7"></div>
