@page
@using CourseLMS.Areas.Identity.Pages;
@using CourseLMS.Models;
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}




<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-4">
        <div class="row">
            <div class="col-12 text-center">

                <h3 class="py-2 text-black">@ViewData["Title"]</h3>
                <partial name="_StatusMessage" for="StatusMessage" />
                
            </div>
        </div>
    </div>

<div class="card-body bg-dark-subtle p-4">
<div class="row pt-3">
            
    <div class="col-md-12">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="UserName" class="form-control" placeholder="" disabled />
                <label asp-for="UserName" class="ms-2 text-muted">Username</label>
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" placeholder="" />
                        <label asp-for="Input.Name" class="ms-2 text-muted">Name</label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Surname" class="form-control" placeholder="" />
                <label asp-for="Input.Surname" class="ms-2 text-muted">Surname</label>
                <span asp-validation-for="Input.Surname" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="" />
                <label asp-for="Input.PhoneNumber" class="ms-2 text-muted">Phone Number</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="col-12">
                <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
            </div>
            
        </form>
    </div>
</div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
