@model User


<div class="mt-2">
    <h2 style="text-align:center;">User Details</h2>
</div>


<table class="table">
    <tr>
        <th>Username:</th>
        <td>@Model.UserName</td>
    </tr>
    <tr>
        <th>Email:</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Name:</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Surname:</th>
        <td>@Model.Surname</td>
    </tr>
    <tr>
        <th>Phone Number:</th>
        <td>@Model.PhoneNumber</td>
    </tr>
</table>

<div class="row mt-2">

   
    <div class="col-6 col-md-3 mt-2">
            <a asp-action="Edit" asp-route-id="@Model?.Id" style="border-radius: 20px;" class="btn btn-outline-success form-control text-black">Edit</a>
    </div>

    <div class="col-6 col-md-3 mt-2">
        <a asp-controller="Users" asp-action="Index" style="border-radius: 20px;" class="btn btn-primary border  form-control">
            Back to Users
        </a>
    </div>
</div>
