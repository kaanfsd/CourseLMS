@model User

<h1>Delete User</h1>

<p class="text-black">Are you sure you want to delete this user?</p>

<table class="table">
    <tr>
        <th>Username:</th>
        <td>@Model.UserName</td>
    </tr>
    <tr>
        <th>Email:</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Name:</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Surname:</th>
        <td>@Model.Surname</td>
    </tr>
    <tr>
        <th>Phone Number:</th>
        <td>@Model.PhoneNumber</td>
    </tr>
</table>


<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-outline-danger" style="border-radius: 20px;" />
    <a asp-action="Index" class="btn btn-primary mx-2" style="border-radius: 20px;">Back to Users</a>
</form>
