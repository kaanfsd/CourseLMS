
@model CourseLMS.Models.Course
@{
    ViewData["Title"] = "Edit";  
}


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black py-2">Edit Course</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                @*Z<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
                <input type="hidden" asp-for="CourseID" />
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" class="form-control border-0 shadow" />
                    <label asp-for="Title" class="text-black"></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" class="form-control border-0 shadow" />
                    <label asp-for="Description" class="text-black"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                @if (User.IsInRole(StaticDetail.Role_Instructor)) {
                    <div class="form-floating py-2 col-12">
                    <select selected asp-for="InstructorID" class="form-control border-0 shadow" asp-items="ViewBag.InstructorID"></select>
                    <label asp-for="InstructorID" class="text-black"></label>
                    <span asp-validation-for="InstructorID" class="text-danger"></span>
                </div>
                }
                else {
                <div class="form-floating py-2 col-12">
                    <select asp-for="InstructorID" class="form-control border-0 shadow" asp-items="ViewBag.Instructors"></select>
                    <label asp-for="InstructorID" class="text-black"></label>
                    <span asp-validation-for="InstructorID" class="text-danger"></span>
                </div>
                }
                <div class="form-floating py-2 col-12">
                    <input asp-for="Category" class="form-control border-0 shadow" />
                    <label asp-for="Category" class="text-black"></label>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="EnrollmentCount" class="form-control border-0 shadow" />
                    <label asp-for="EnrollmentCount" class="text-black"></label>
                    <span asp-validation-for="EnrollmentCount" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ImageURL" class="form-control border-0 shadow" />
                    <label asp-for="ImageURL" class="text-black"></label>
                    <span asp-validation-for="ImageURL" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-outline-success form-control text-black">Save</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Courses" asp-action="Index" class="btn btn-outline-primary border  form-control">
                            Back to Courses
                        </a>
                    </div>
                </div>
                </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}