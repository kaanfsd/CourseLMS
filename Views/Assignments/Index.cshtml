@model IEnumerable<CourseLMS.Models.Assignment>

@{
    ViewData["Title"] = "Index";

}

<div class="card shadow border-0 mt-4">
    <div class="card-body p-4">
        <div class="row pb-4">
            <div class="col-6">
                <h2 class="text-black py-2">Assignments</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Assignments" asp-action="Create" class="btn btn-primary btn-sm">
                    <i class="bi bi-plus-circle "></i> Create New Assignment
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CourseID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DueDate)
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-info">
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DueDate)
                        </td>
                         <td style="width:20%">
                            <div class="btn-group" role="group">
                                <a asp-controller="Assignments" asp-action="Edit" asp-route-id="@item.AssignmentID" class="btn btn-primary btn-sm">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-pencil-square" style="font-size: 10px;"></i> &nbsp;Edit
                                    </div>
                                </a>
                                <a asp-controller="Assignments" asp-action="Details" asp-route-id="@item.AssignmentID" class="btn btn-warning btn-sm">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-info-circle-fill" style="font-size: 10px;"></i> &nbsp;Details
                                    </div>
                                </a>
                                <a asp-controller="Assignments" asp-action="Delete" asp-route-id="@item.AssignmentID" class="btn btn-danger btn-sm">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-trash-fill" style="font-size: 10px;"></i> &nbsp;Delete
                                    </div>
                                </a>
                            </div>
                         </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>