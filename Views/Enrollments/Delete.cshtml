@model CourseLMS.Models.Enrollment

@{
    ViewData["Title"] = "Delete";
}

<h3 align="center" class="text-black">Are you sure you want to delete this Enrollment?</h3>
<div align="center">
    <dl>
        <dt class="text-black">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt class="text-black">
            @Html.DisplayNameFor(model => model.CourseID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Title)
        </dd>
        <dt class="text-black">
            @Html.DisplayNameFor(model => model.EnrollmentDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnrollmentDate)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="EnrollmentID" />
        <input type="submit" value="Delete" style="border-radius: 20px;" class="btn btn-outline-danger" />
        <a asp-action="Index" style="border-radius: 20px;" class="btn btn-primary mx-2">Back to Enrollments</a>
    </form>
</div>