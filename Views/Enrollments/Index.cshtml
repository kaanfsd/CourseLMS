@model IEnumerable<CourseLMS.Models.Enrollment>

@{
    ViewData["Title"] = "Index";
}

<div class="card shadow border-0 mt-4">
    <div class="card-body p-4">
        <div class="row pb-4">
            <div class="col-6">
                <h2 class="text-black py-2">Enrollments</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Enrollments" asp-action="Create" class="btn btn-outline-success">
                    <i class="bi bi-plus-circle "></i> Create New Enrollment
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CourseID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EnrollmentDate)
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-info">
                        <td>
                            @Html.DisplayFor(modelItem => item.User.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EnrollmentDate)
                        </td>
                        <td style="width:20%">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Enrollments" asp-action="Edit" asp-route-id="@item.EnrollmentID" class="btn btn-primary btn-sm mx-2">
                                    <i class="bi bi-pencil-square"></i>Edit
                                </a>
                                <a asp-controller="Enrollments" asp-action="Details" asp-route-id="@item.EnrollmentID" class="btn btn-primary btn-sm mx-2">
                                    <i class="bi bi-pencil-square"></i>Details
                                </a>
                                <a asp-controller="Enrollments" asp-action="Delete" asp-route-id="@item.EnrollmentID" class="btn btn-danger btn-sm mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>